#include<communicate.h>
#include<string.h>

char FeatureCode[] = "XD1010001";
const char START_CODE[] = {0xE5};
const char END_CODE[] = {0xE6};
char FCS_Help[1] = {0x00};

void Add_StartCode(char * str){
    strcat(str,START_CODE);
}

void Add_EndCode(char * str){
    strcat(str,END_CODE);
}

void Add_FCS(char * str){
    int length = strlen(str);
    length += 2 ; // With Origin , FCS and EndCode
    length %= 256;
    char * temp = str;
    while(*temp != '\0'){
        temp ++ ;
    }
    *temp = (char) length;
    temp ++ ;
    *temp = '\0';
}

